/static StaticR Static appStatic
/auth   AuthR   Auth   getAuth

/favicon.ico FaviconR GET
/robots.txt RobotsR GET

/ HomeR GET

/api ApiP:
  /v1 ApiV1P:
    /authenticate ApiV1AuthenticationR POST
    /register ApiV1RegistrationR POST
    /whoami ApiV1CurrentUserR GET
    /arkham ApiV1ArkhamP:
      /games ApiV1ArkhamGamesP:
        /#ArkhamGameId ApiV1ArkhamGamesGameP:
          / ApiV1ArkhamGameR GET
          /locations ApiV1ArkhamGameLocationsP:
            /reveal ApiV1ArkhamGameLocationsRevealR POST
            /#Int ApiV1ArkhamGameLocationsLocationP:
              /investigate ApiV1ArkhamGameLocationsInvestigateR POST



